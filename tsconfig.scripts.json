{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "outDir": "./dist/scripts",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "bundler"
  },
  "include": [
    "scripts/**/*.ts",
    "tailwind.config.ts",
    "vite.config.ts",
    "vitest.config.ts",
    "tests/**/*"
  ]
}
